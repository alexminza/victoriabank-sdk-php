{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "Debug Current Test File",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/vendor/bin/phpunit",
            "args": [
                "${file}",
                "--debug",
                "--verbose"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_SESSION": "vscode"
            }
        },
        {
            "name": "Debug All Tests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceRoot}/vendor/bin/phpunit",
            "args": [
                "--debug",
                "--verbose"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes"
            ]
        }
    ]
}
