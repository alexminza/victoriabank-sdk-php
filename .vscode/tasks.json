{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "phpunit tests",
            "type": "shell",
            "command": "vendor/bin/phpunit",
            "args": [
                "--verbose"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "composer update",
            "type": "shell",
            "command": "composer",
            "args": [
                "update"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "curl composer",
            "type": "shell",
            "command": "curl",
            "args": [
                "-s",
                "https://getcomposer.org/installer",
                "|",
                "php"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
